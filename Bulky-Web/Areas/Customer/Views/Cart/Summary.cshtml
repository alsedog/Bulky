@model ShoppingCartVM

<form method="post">
    <div class="container">
        <div class="card shadow border-0">

            <div class="card-header bg-primary text-light py-3">
                <div class="row px-4">
                    <div class="col-6">
                        <h5 class="pt-2 text-white">
                            Order Summary
                        </h5>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" class="btn btn-danger btn-sm text-light">Back to Cart</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-4">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">Shipping Details:</span>
                                </h4>
                            </div>
                            <div class="row my-2">
                                <div class="col-3">
                                    <label for="name" class="form-label text-primary">Name</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Name" id="name" class="form-control" style="background-color: #f4f4f4; border: 1px solid #ccc; border-radius: 5px;" />
                                    <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-2">
                                <div class="col-3">
                                    <label for="phone" class="form-label text-primary">Phone</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PhoneNumber" id="phone" class="form-control" style="background-color: #f4f4f4; border: 1px solid #ccc; border-radius: 5px;" />
                                    <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-2">
                                <div class="col-3">
                                    <label for="street" class="form-label text-primary">Street Address</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.StreetAddress" id="street" class="form-control" style="background-color: #f4f4f4; border: 1px solid #ccc; border-radius: 5px;" />
                                    <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-2">
                                <div class="col-3">
                                    <label for="city" class="form-label text-primary">City</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.City" id="city" class="form-control" style="background-color: #f4f4f4; border: 1px solid #ccc; border-radius: 5px;" />
                                    <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-2">
                                <div class="col-3">
                                    <label for="state" class="form-label text-primary">State</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.State" id="state" class="form-control" style="background-color: #f4f4f4; border: 1px solid #ccc; border-radius: 5px;" />
                                    <span asp-validation-for="OrderHeader.State" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-2">
                                <div class="col-3">
                                    <label for="postal" class="form-label text-primary">Postal Code</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PostalCode" id="postal" class="form-control" style="background-color: #f4f4f4; border: 1px solid #ccc; border-radius: 5px;" />
                                    <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary:</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var details in Model.ShoppingCartList)
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            <h6 class="my-0">@details.Product.Title</h6>
                                            <small class="text-muted">Quantity: @details.Count</small>
                                        </div>
                                        <span class="text-muted">@details.Price.ToString("c")</span>
                                    </li>
                                }
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <small class="text-info">Total (USD)</small>
                                    <strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-8 pt-2">
                        <p style="color: maroon; font-size: 14px;">
                            Estimate Arrival Date:
                            @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
                        </p>
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" class="btn btn-success form-control" style="background-color: #28a745; color: #fff; border: none;">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
